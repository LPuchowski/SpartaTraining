<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <h1 class="title">List of all characters</h1>
      <a class="link" href="/final_fantasy/random">Random Character</a>
    </div>
  </div>

  <% @characters.each do |character| %>

    <div class="character">
      <div class="img-container">
        <img class="text-center" src="<%= character["picture"] %>" alt="" style="width:30%; margin:auto;">
      </div>
      <div class="character-container">
        <h4><b><%= character["name"] %></b></h4>
      </div>
    </div>

  <% end %>

</div>
